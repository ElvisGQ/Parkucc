<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_background2"
    android:elevation="8dp"
    android:layout_gravity="center"
    android:gravity="center">

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/user_name_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sonic"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Correo -->
    <TextView
        android:id="@+id/email_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo: luisfercvr@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="4dp" />

    <!-- Rol -->
    <TextView
        android:id="@+id/role_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rol: Estudiante"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="4dp" />

    <!-- Placa -->
    <TextView
        android:id="@+id/license_plate_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa: XXX-00-00"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Botones en línea -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón Cerrar -->
        <Button
            android:id="@+id/close_button_settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CERRAR"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:backgroundTint="#1E90FF"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
